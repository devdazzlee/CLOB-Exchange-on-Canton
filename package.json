{
  "name": "clob-exchange-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "CLOB Exchange on Canton - Monorepo",
  "workspaces": [
    "backend",
    "frontend",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"cd backend && yarn dev\" \"cd frontend && yarn dev\"",
    "build": "yarn workspaces run build",
    "test": "yarn workspaces run test",
    "migrate": "yarn workspace @clob-exchange/indexer migrate"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
