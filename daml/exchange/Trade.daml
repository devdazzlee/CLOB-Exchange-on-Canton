module Trade where

-- Trade template: immutable record of fills
template Trade
  with
    tradeId : Text
    buyer : Party
    seller : Party
    marketId : Text
    price : Decimal
    quantity : Decimal
    timestamp : Time
    buyOrderId : Text
    sellOrderId : Text
  where
    signatory buyer, seller
    observer buyer, seller

    -- Trades are immutable - no choices needed
